name: Workflow 1

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Set folder names variable
        run: |
          pwd
          folder_names=$(find ./bcapps  -maxdepth 1 -type d -exec basename {} \; | tail -n +2)
          echo $folder_names

      - name: Upload Artifact
        uses: actions/upload-artifact@v2
        with:
          name: folder-artifact
          path: $folder_names
